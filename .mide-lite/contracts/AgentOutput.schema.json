{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mide://contracts/agent/AgentOutput.schema.json",
  "title": "AgentOutput",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "summary": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string" },
          "title": { "type": "string" },
          "content": { "type": "string" },
          "description": { "type": "string" },
          "metadata": {
            "type": "object",
            "properties": {
              "importance": {
                "type": "string",
                "enum": ["critical", "high", "medium", "low"],
                "default": "medium",
                "description": "Importance level of this artifact"
              },
              "audience": {
                "type": "string",
                "enum": ["user", "agent", "audit"],
                "default": "agent",
                "description": "Intended audience: user (end-user facing), agent (inter-agent), audit (trace/debug)"
              },
              "promote_to_output": {
                "type": "boolean",
                "default": false,
                "description": "Whether to include in final user-facing output (opt-in)"
              },
              "lifecycle": {
                "type": "string",
                "enum": ["persistent", "ephemeral", "intermediate"],
                "default": "ephemeral",
                "description": "Artifact lifecycle: persistent (keep), ephemeral (discard), intermediate (agent-use only)"
              },
              "size_kb": {
                "type": "number",
                "description": "Approximate size in kilobytes"
              },
              "created_by": {
                "type": "string",
                "description": "Agent that created this artifact"
              },
              "created_at": {
                "type": "string",
                "format": "date-time",
                "description": "ISO 8601 timestamp"
              }
            }
          }
        },
        "required": ["type", "title", "content"]
      }
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "decision": { "type": "string" },
          "rationale": { "type": "string" },
          "alternatives_rejected": { "type": "array", "items": { "type": "string" } },
          "trade_offs": { "type": "string" },
          "context": { "type": "string" }
        },
        "required": ["decision", "rationale"]
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": { "type": "string" },
          "category": { "type": "string" },
          "description": { "type": "string" },
          "location": { "type": "string" },
          "recommendation": { "type": "string" },
          "impact": { "type": "string" }
        },
        "required": ["severity", "description"]
      }
    },
    "next_steps": { "type": "array", "items": { "type": "string" } },
    "blockers": { "type": "array", "items": { "type": "string" } },
    "references": { "type": "array", "items": { "type": "string" } },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["summary", "artifacts", "references", "confidence"]
}

